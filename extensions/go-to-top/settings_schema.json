[
  {
    "name": "Back to Top Button",
    "settings": [
      {
        "type": "checkbox",
        "label": "Enable Back to Top Button",
        "id": "enable_back_to_top_button",
        "default": true
      },
      {
        "type": "text",
        "label": "Button Text",
        "id": "button_text",
        "default": "Back to Top",
        "info": "Text that will appear on the back-to-top button."
      },
      {
        "type": "range",
        "label": "Button Position from Bottom",
        "id": "button_position",
        "min": 10,
        "max": 100,
        "step": 10,
        "unit": "px",
        "default": 20,
        "info": "Set the distance from the bottom of the screen."
      },
      {
        "type": "select",
        "label": "Button Color",
        "id": "button_color",
        "options": [
          {
            "label": "Red",
            "value": "#FF0000"
          },
          {
            "label": "Blue",
            "value": "#0000FF"
          },
          {
            "label": "Green",
            "value": "#00FF00"
          },
          {
            "label": "Black",
            "value": "#000000"
          }
        ],
        "default": "#0000FF",
        "info": "Select the color of the button."
      }
    ]
  }
]
